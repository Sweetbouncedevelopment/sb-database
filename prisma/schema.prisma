datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DatabankUsers {
  username   String   @id @unique
  peper      String   @db.VarChar(45)
  password   String   @db.VarChar(60)
  admin      Boolean
  istemppass Bytes?   @db.Bit(1)
  lastlogin  DateTime

  logs DatabankLogs[]
}

model DatabankLogs {
  id          Int      @id @unique @default(autoincrement())
  username    String
  action      Int
  description String
  time        DateTime

  user DatabankUsers @relation(fields: [username], references: [username])
}
