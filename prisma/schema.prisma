generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DatabankUsers {
  username   String         @id @unique(map: "username_UNIQUE")
  password   String         @db.VarChar(60)
  admin      Boolean
  istemppass Boolean?       @db.Bit(1)
  lastlogin  DateTime
  logs       DatabankLogs[]
}

model DatabankLogs {
  id          Int           @id @unique @default(autoincrement())
  username    String
  action      Int
  description String
  time        DateTime
  user        DatabankUsers @relation(fields: [username], references: [username], onDelete: NoAction, onUpdate: NoAction, map: "fk_logs_users")

  @@index([username], map: "fk_logs_users_idx")
}
